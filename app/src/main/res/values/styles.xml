        <style name="CustomTitleBarThemeWithBackButton" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowActionBar">false</item>
            <item name="android:windowNoTitle">false</item>
            <item name="android:windowTitleSize">110dp</item>
            <item name="android:windowTitleBackgroundStyle">@style/titleBarBackgroundStyleWithBackButton</item>
        </style>

        <style name="titleBarBackgroundStyleWithBackButton">
            <item name="android:background">@android:color/transparent</item>
        </style>


        <style name="CustomTitleBarThemeWithBackButtonAndMenu" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowActionBar">false</item>
            <item name="android:windowNoTitle">false</item>
            <item name="android:windowTitleSize">110dp</item>
            <item name="android:windowTitleBackgroundStyle">@style/titleBarBackgroundStyleWithBackButtonAndMenu</item>
        </style>

        <style name="titleBarBackgroundStyleWithBackButtonAndMenu">
            <item name="android:background">@android:color/transparent</item>
        </style>
