<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTileBarWithMenu"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLogoHeaderBackAndMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_emoney_red"
        android:padding="10dp"
        android:layout_toEndOf="@+id/ivBackAndMenu"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivBackAndMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_action_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_action_right_nav"
        />

    <TextView
        android:id="@+id/txtNavigationNameWithMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLogoHeaderBackAndMenu"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:padding="5dp"
        android:text="Navigation"
        android:textAlignment="center"
        android:textColor="@color/colorHeadText"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />


</RelativeLayout>